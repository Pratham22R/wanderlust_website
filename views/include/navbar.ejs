<style>
  /* Navbar for screens above 992px */
  @media (min-width: 992px) {
    .navbar {
      background-color: rgb(254, 66, 77) !important;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 80px;
    }
    .navbar-brand {
      color: #fff !important;
      font-weight: bold;
      font-size: 1.8rem;
      margin-right: 2rem;
    }
    .navbar-nav {
      display: flex;
      align-items: center;
    }
    .nav-link {
      color: #fff !important;
    }
    .search-ip {
      background-color: #fff !important; /* Input background always white */
      border: 1px solid #fff;
      border-radius: 50px;
      padding: 0.7rem 1.5rem;
      width: 300px;
      font-size: 1.1rem;
      color: rgb(254, 66, 77); /* Text color matches background */
    }
    .form-control::placeholder {
      color: rgb(254, 66, 77); /* Placeholder text in navbar background color */
      font-size: 1.2rem;
    }
    .btn-search {
      border: 1px solid #fff;
      background-color: transparent;
      border-radius: 50px;
      padding: 0.5rem 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      color: #fff; /* Default text color */
    }
    .btn-search:hover {
      background-color: transparent !important; /* No white background on hover */
      color: #fff !important; /* Text remains white */
    }
  }

  /* Navbar for screens below 992px */
  @media (max-width: 991px) {
    .navbar {
      background-color: #f8f9fa !important;
    }
    .navbar-brand {
      color: rgb(254, 66, 77) !important;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light sticky-top">
  <div class="container-fluid">
    <!-- For larger screens: Show Wanderlust instead of icon -->
    <a class="navbar-brand" href="/listings">Wanderlust</a>

    <!-- Toggle button for smaller screens -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#navbarCollapse"
      aria-controls="navbarCollapse"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Offcanvas Navbar -->
    <div
      class="offcanvas offcanvas-end"
      tabindex="-1"
      id="navbarCollapse"
      aria-labelledby="navbarCollapseLabel"
    >
      <div class="offcanvas-header offcanvas-title">
        <h5 id="navbarCollapseLabel">Wanderlust</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <div class="navbar-nav me-auto mb-2 mb-lg-0">
          <a class="nav-link" href="/listings">Explore</a>
        </div>
        <div class="navbar-nav me-auto mb-2 mb-lg-0">
          <form class="d-flex" role="search" action="/listings" method="GET">
            <input
              class="form-control me-2 search-ip"
              type="search"
              name="query"
              placeholder="Search location"
              value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
              required
            />
            <button class="btn btn-search" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i> <span>Search</span>
            </button>
          </form>
        </div>
        <div class="navbar-nav">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
          <% if(!currUser){ %>
          <a class="nav-link" href="/signup"><b>SignUp</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
          <% } %> <% if(currUser){ %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>
