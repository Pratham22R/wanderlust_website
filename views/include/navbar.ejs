<style>
  /* Navbar for screens above 992px */
  @media (min-width: 992px) {
    .navbar {
      background-color: rgb(254, 66, 77) !important;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 80px;
    }
    .navbar-brand {
      color: #fff !important;
      font-weight: bold;
      font-size: 1.8rem;
      margin-right: 2rem;
    }
    .navbar-nav {
      display: flex;
      align-items: center;
    }
    .nav-link {
      color: #fff !important;
    }
    .search-ip {
      background-color: #fff !important;
      border: 1px solid #fff;
      border-radius: 50px;
      padding: 0.7rem 1.5rem;
      width: 300px;
      font-size: 1.1rem;
      color: rgb(254, 66, 77);
    }
    .form-control::placeholder {
      color: rgb(254, 66, 77);
      font-size: 1.2rem;
    }
    .btn-search {
      border: 1px solid #fff;
      background-color: transparent;
      border-radius: 50px;
      padding: 0.5rem 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      color: #fff;
    }
    .btn-search:hover {
      background-color: transparent !important;
      color: #fff !important;
    }
  }

  /* Navbar for screens below 992px */
  @media (max-width: 991px) {
    .navbar {
      background-color: #f8f9fa !important;
    }
    .navbar-brand {
      color: rgb(254, 66, 77) !important;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light sticky-top shadow">
  <div class="container-fluid px-3">
    <!-- Brand -->
    <a class="navbar-brand" href="/">Wanderlust</a>

    <!-- Mobile Toggle Button -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#navbarCollapse"
      aria-controls="navbarCollapse"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Offcanvas -->
    <div
      class="offcanvas offcanvas-end"
      tabindex="-1"
      id="navbarCollapse"
      aria-labelledby="navbarCollapseLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="navbarCollapseLabel">Menu</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>

      <div class="offcanvas-body d-flex flex-column flex-lg-row align-items-lg-center justify-content-between w-100">
        <!-- Conditional Nav Items -->
        <ul class="navbar-nav mb-2 mb-lg-0 me-lg-3">
          <% if (currUser && currUser.role === 'guest') { %>
            <li class="nav-item">
              <a class="nav-link" href="/listings">Explore</a>
            </li>
          <% } %>

          <% if (currUser && currUser.role === 'host') { %>
            <li class="nav-item">
              <a class="nav-link" href="/listings/new">Airbnb your home</a>
            </li>
          <% } %>
        </ul>

        <!-- Search -->
        <form class="d-flex mb-3 mb-lg-0" role="search" action="/listings" method="GET">
          <input
            class="form-control me-2 search-ip"
            type="search"
            name="query"
            placeholder="Search location"
            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
            required
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> <span class="ms-1">Search</span>
          </button>
        </form>

        <!-- User Actions -->
        <ul class="navbar-nav mb-2 mb-lg-0 ms-lg-3 d-flex align-items-center">
          <% if (!currUser) { %>
            <!-- Sign Up Dropdown -->
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="signupDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <b>Sign Up</b>
              </a>
              <ul class="dropdown-menu" aria-labelledby="signupDropdown">
                <li><a class="dropdown-item" href="/signup/guest">Guest Sign Up</a></li>
                <li><a class="dropdown-item" href="/signup/host">Host Sign Up</a></li>
              </ul>
            </li>

            <!-- Login -->
            <li class="nav-item">
              <a class="nav-link" href="/login"><b>Login</b></a>
            </li>
          <% } else { %>
            <% if (currUser.role === 'host') { %>
              <li class="nav-item">
                <a class="nav-link" href="/host/dashboard"><b>Dashboard</b></a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link text-danger" href="/logout"><b>Logout</b></a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</nav>
