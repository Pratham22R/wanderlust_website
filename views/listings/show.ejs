<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-3 mt-3">
                <h2>Listing Details</h2>
            </div>
            <div class="card col-6 offset-3">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listings_img"><br>
                <div class="card-body">
                    <p class="card-text">
                       <b> <%= listing.title %> </b><br>
                       <%= listing.description %> <br>
                       &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
                       <%= listing.location %> <br>
                       <%= listing.country %> <br>
                    </p>
                </div>
            </div>
            <div class="col-6 offset-3 mr-3">
            <a href="/listings/<%= listing._id %>/edit" style="display: inline-block;"><button class="btn btn-dark add-btn offset-1">Edit</button></a>
            <form action="/listings/<%= listing._id %>?_method=delete" method="post" style="display: inline-block;">
                <button class="btn btn-dark  offset-4">Delete</button">
            </form>
        </div>
        </div><br>
    </body>


    <!-- toLocaleString() is used to convert numbers into local standard form with commmas n points here indian code is en-IN -->