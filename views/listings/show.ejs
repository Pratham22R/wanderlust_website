<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-3 mt-3">
      <h2><b> <%= listing.title %> </b></h2>
    </div>
    <div class="card col-6 offset-3 listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listings_img"
      /><br />
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
          <%= listing.location %> <br />
          <%= listing.country %> <br />
        </p>
      </div>
    </div>
    <div class="col-6 offset-3 mr-3 mb-5">
      <a href="/listings/<%= listing._id %>/edit" style="display: inline-block"
        ><button class="btn btn-dark add-btn offset-1">Edit</button></a
      >
      <form
        action="/listings/<%= listing._id %>?_method=delete"
        method="post"
        style="display: inline-block"
      >
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
    <br />
    <br />
    <hr />
    <div class="col-8 offset-3 mt-3 mb-5">
      <h2><b> Leave a review </b></h2>
      <form
        action="/listings/<%= listing._id %>/reviews"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3 mt-3">
          <label for="rating"> <b> Rate </b></label>
          <input
            type="range"
            name="review[rating]"
            id="rating"
            min="1"
            max="5"
            class="form-range"
          />
        </div>
        <div class="mb-3 mt-3">
          <label for="comment"><b>Comment</b></label>
          <textarea
            name="review[comment]"
            id="comment"
            rows="5"
            cols="15"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please give a comment</div>
        </div>

        <button type="submit" class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
    <hr />
    <div class="col-8 offset-3 mt-3 mb-3">
      <h2><b> Reviews </b></h2>
      <div class="row">
        <% for(review of listing.reviews){ %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body mb-3">
              <h5 class="card-title">John Doe</h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating %>/5</p>
            </div>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete" method="post">
                <button class="btn btn-dark mb-3">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
    <br />

    <!-- toLocaleString() is used to convert numbers into local standard form with commmas n points here indian code is en-IN -->
  </div>
</body>
