<%- layout("/layouts/boilerplate") %>

<style>
  .login-container {
    max-width: 450px;
    margin: 80px auto;
    padding: 2.5rem;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(255, 105, 135, 0.25); /* Greenish shadow */
    background-color: #fff;
  }

  .login-container h2 {
    text-align: center;
    color: #dc3545;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .form-label {
    font-weight: 600;
    color: #333;
  }

  .form-control {
    border-radius: 999px;
    padding: 0.75rem 1.25rem;
    font-size: 1rem;
  }

  .form-control::placeholder {
    color: #999;
  }

  .login-btn {
    width: 100%;
    background-color: #dc3545;
    color: white;
    font-weight: 600;
    padding: 0.75rem;
    border-radius: 999px;
    transition: background-color 0.3s ease;
  }

  .login-btn:hover {
    background-color: #dc3545;
  }

  .signup-link {
    text-align: center;
    margin-top: 1rem;
    color: #555;
  }

  .signup-link a {
    color: #dc3545;
    font-weight: 500;
    text-decoration: none;
  }

  .signup-link a:hover {
    text-decoration: underline;
  }
</style>

<div class="login-container">
  <h2>Login</h2>
  <form action="/login" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        name="username"
        class="form-control"
        placeholder="Enter your username"
        required
      />
      <div class="invalid-feedback">Username is required</div>
    </div>

    <div class="mb-4">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="form-control"
        placeholder="Enter your password"
        required
      />
      <div class="invalid-feedback">Password is required</div>
    </div>

    <button type="submit" class="btn login-btn">Login</button>
  </form>

  <div class="signup-link">
    Donâ€™t have an account? <a href="/signup/guest">Sign Up</a>
  </div>
</div>
